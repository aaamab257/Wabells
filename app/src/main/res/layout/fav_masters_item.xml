<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="10pt"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="#FFFFFF"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:id="@+id/lin_name"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/tutor_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                         />
                    <RelativeLayout
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:visibility="gone"
                        android:id="@+id/rel_online"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/online_dot"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/txt_tutorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Ahmed Badr"
                            android:textColor="#2D4379"
                            android:textSize="18sp" />
                        <ImageView
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_width="20dp"
                            android:id="@+id/isFea"
                            android:visibility="gone"
                            android:layout_height="20dp"
                            android:src="@drawable/featured_true"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Egypt - Cairo"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/location_on_24"
                        android:textColor="#2D4379"
                        android:layout_marginStart="10dp"
                        android:id="@+id/txt_tutorLocation"
                        />
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/fav_image"
                android:src="@drawable/favorite_24"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#FFFFFF"
                android:visibility="gone"
                android:id="@+id/checkIf"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fav_image"
                android:layout_alignParentEnd="true"
                android:textColor="#279EFF"
                android:text="25 SAR/hr"
                android:id="@+id/txt_price"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/lin_subjects"
                android:layoutDirection="locale"
                android:textColor="#7C79A6"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:id="@+id/txt_disc"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_above="@id/lin_bottom"
                android:layout_marginTop="10dp"
                android:layoutDirection="locale"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/lin_subjects"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/linSub1"
                    android:background="@drawable/subject_style"
                    >

                    <TextView
                        android:id="@+id/txt_sub1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textColor="#279EFF" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:id="@+id/linSub2"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/subject_style"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#279EFF"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:id="@+id/txt_sub2"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginStart="8dp"
                    android:id="@+id/linSub3"
                    android:background="@drawable/subject_style"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="#279EFF"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:text=""

                        android:id="@+id/txt_subMany"
                        />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:id="@+id/lin_bottom"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="8dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    >
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:numStars="5"
                        android:id="@+id/ratingBar"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(10)"
                        android:textSize="14sp"
                        android:id="@+id/txt_numOfRate"
                        android:layout_marginStart="5dp"
                        android:textColor="#7C79A6"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/eye_views"
                        android:text="250 Views"
                        android:textSize="14sp"
                        android:id="@+id/numOfViews"
                        android:drawablePadding="5dp"
                        android:textColor="#7C79A6"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>