<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layoutDirection="ltr"
    >
    <TextView
        android:id="@+id/tv_dialog_title"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/colorAccent"
        tools:text="Dialog title"
        android:textStyle="bold"
        android:textSize="19sp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/imgdialoug"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_dialog_text"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:text="this is title"
        android:gravity="center"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/tv_dialog_question"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:text="this is title"
        android:gravity="center"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:id="@+id/lin_dialoug_twoaction"
        >
        <TextView
            android:id="@+id/tv_dialog_cancel"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/no"
             />
        <TextView
            android:id="@+id/tv_dialog_ok"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/ok"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/lin_dialoug_oneaction"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_dialog_oksin"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/ok"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

    </LinearLayout>

</LinearLayout>