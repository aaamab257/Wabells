<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="handler"
            type="com.clixifi.wabell.ui.main.MainScreen.MyHandler" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".ui.main.MainScreen">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragments_parent"
            android:layout_above="@id/lin_bottom"
            />
        <LinearLayout
            android:id="@+id/lin_bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#FFFF"
            android:elevation="10.0dp"
            android:layoutDirection="locale"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/lin_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{handler::home}"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/home_active" />

                <TextView
                    android:id="@+id/txt_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="@string/home"
                    android:textColor="#279EFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_chat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_chat"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/message_active" />

                <TextView
                    android:id="@+id/txt_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="@string/req"
                    android:textColor="#7C79A6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_noti"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{handler::profile}"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/profile_inactive" />

                <TextView
                    android:id="@+id/txt_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="@string/profile"
                    android:textColor="#7C79A6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_projects"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{handler::more}"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_more"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/more_inactive" />

                <TextView
                    android:id="@+id/txt_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="@string/more"
                    android:textColor="#7C79A6" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>